#!/bin/bash

# Log stdout and stderr to file
exec &> /tmp/xprofile.log

echo $1

# start the light-locker daemon for screen locking with LightDM
light-locker &

# Handle window manager choice
case $1 in
  bspwm)
     sxhkd -s /tmp/sxhkd.fifo &
     polybar QUEEG500 &
     compton -b
     feh --bg-fill ~/.config/wallpaper 
     wmname LG3D
     ;;
esac
